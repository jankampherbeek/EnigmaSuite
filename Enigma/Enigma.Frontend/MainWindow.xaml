<Window x:Class="Enigma.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enigma.Frontend"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"        
        Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Height="300" Width="450" Name="ImgBtn" Margin="0" >
            <Image Source="/Images/Enigma-2.0.jpg"/>
        </Button>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="NameVersion" Text="NameVersion" Style="{StaticResource subTitleStyle}" Foreground="Cornsilk" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="12"/>
    </Grid>
</Window>
