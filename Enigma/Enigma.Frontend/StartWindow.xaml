<Window x:Class="Enigma.Frontend.Ui.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enigma.Frontend.Ui"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"        
        Height="160" Width="320">
    <Grid>
        <TextBlock Grid.Row="1" Grid.Column="0" Name="tbExplanation" Text="tbExplanation" Style="{StaticResource SubTitleStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6" TextWrapping="Wrap" />
    </Grid>
</Window>
