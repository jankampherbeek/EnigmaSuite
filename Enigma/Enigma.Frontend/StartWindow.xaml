<Window x:Class="Enigma.Frontend.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enigma.Frontend"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"        
        Height="320" Width="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Height="290" Width="430" Name="ImgBtn" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Images/Enigma.jpg"/>
        </Button>
        <TextBlock Grid.Row="1" Grid.Column="0" Name="Name" Text="Enigma" Style="{StaticResource subTitleStyle}" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="6"/>
    </Grid>
</Window>
