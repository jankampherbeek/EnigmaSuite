<Window x:Class="Enigma.Frontend.Ui.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:Enigma.Frontend.Ui.ViewModels"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"        
        Height="160" Width="320">
    <Window.Resources>
        <viewModels:StartViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="6" TextWrapping="Wrap" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Text="Checking for updates" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
    </Grid>
</Window>
