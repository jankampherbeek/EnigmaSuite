<Window x:Class="E4C.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E4C.Views"
        mc:Ignorable="d"
        Title="CommonDashboardTitle" Height="820" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="FormTitle" Text="FormTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
        <Image Grid.Row="1" Source="/views/Charts.jpg"/>
        <Image Grid.Row="2" Source="/views/Calculations.jpg"/>
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="5,0,0,2" Orientation="Vertical">
            <Button x:Name="btnCharts" Margin="5" Content="CommonDashboardCharts" Click="BtnCharts_Click"/>
            <Button x:Name="btnCalc" Margin="5" Click="BtnCalc_Click" Content="CommonDashboardCalculations"/>
            <Button x:Name="btnExit" Margin="5" Click="BtnExit_Click" Content="CommonDashboardExit"/>
        </StackPanel>
    </Grid>
</Window>
