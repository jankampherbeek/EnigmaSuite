<Window x:Class="E4C.views.DashboardCharts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E4C.views"
        mc:Ignorable="d"
        Title="DashboardCharts" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="FormTitle" Text="FormTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
        <StackPanel Grid.Row="1" Margin="10">
            <Label FontWeight="Bold" HorizontalAlignment="Center" Name="ChartsDashboardExplanation" Content="ChartsDashboardExplanation" />
            <Button Name="BtnNewChart" Content="BtnNewChart" Margin="2" Click="BtnNewChart_Click"/>
        </StackPanel>
        <Button Grid.Row="3" x:Name="BtnClose" Content="BtnClose" Width="120" Margin="2" />
    </Grid>
</Window>
